<Window x:Class="UniversityManagementSystem.AssignResponsibleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Responsible" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label Content="Select Application:"/>
        <ComboBox x:Name="ApplicationsComboBox" DisplayMemberPath="Student.FullName"/>
        <Label Content="Responsible Person:"/>
        <TextBox x:Name="ResponsibleTextBox"/>
        <Button Content="Assign" Click="AssignButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>